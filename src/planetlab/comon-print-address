while [ $# -gt 0 ] ; do
   IP=$1 ; shift
   let a="($IP>>24) & 255"
   let b="($IP>>16) & 255"
   let c="($IP>>8) & 255"
   let d="($IP>>0) & 255"
   echo $a.$b.$c.$d
done
