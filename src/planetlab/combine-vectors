. ./planetlab-config


if [ $# -ne 1 ]; then
   echo "Usage: combine-vectors [Test ID]"
   exit 1
fi
TESTID=$1
shift


if [ ! -e $TESTID/ ]; then
   mkdir $TESTID/
fi
cd $TESTID/

PU_VECTORS=`ls $TESTID-pu*.vec.bz2`

(
   for v in $PU_VECTORS ; do
      echo "--values=$v"
      echo "--input=$v"
   done
) | ../../combinesummaries pu-vectors.vec.bz2 "Host" -quiet
