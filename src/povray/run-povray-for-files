POV_FILE_LIST=`\
( \
while [ x$1 != "x" ] ; do \
   echo $1 && \
   shift ; \
done \
) | sort -u`

for POV_FILE in $POV_FILE_LIST ; do
   ./povray-distribute 1024 768 $POV_FILE &
done

wait
